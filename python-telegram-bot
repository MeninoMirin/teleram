from telegram.ext import Updater, CommandHandler

# Função que o bot executa quando alguém usa o comando /start
def start(update, context):
    update.message.reply_text("Olá! Eu sou o seu bot do Telegram.")

def main():
    # Coloque seu token aqui
    updater = Updater("7359248793:AAEOyPPaHPZvEICuHXtzlgViUO3VP-Ubv7U", use_context=True)

    # Adiciona o comando /start ao bot
    dp = updater.dispatcher
    dp.add_handler(CommandHandler("start", start))

    # Inicia o bot
    updater.start_polling()
    updater.idle()

if __name__ == '__main__':
    main()
